<tr>
  <td>
    <img src="{{avatar}}" class="mr-2" alt="image"> {{name}} 
  </td>
  <td class="text-capitalize" >
    <form class="forms-sample" method="post" action="/admin/users/{{_id}}/privileges?newMethod=PUT"  >
      <div class="form-group">

        {{#if (isAdmin currentUser.privilege section) }}
        <div class="input-group">
          <select class="form-control form-control-lg"  name="privilege">
            {{#select privilege}}
              <option value="subadmin" >Sub-Admin</option>
              <option value="admin" >Admin</option>
              <option value="user" >User</option>
            {{/select}}
          </select>
          <div class="input-group-append">
            <button class="btn btn-sm btn-gradient-primary">Update</button>
          </div>
        </div>
        {{else}}
        {{/if}}

      </div>
    </form>
  </td>
  <td>
    <form action="">

    </form>
  </td>
</tr>