  {{#each errors}}
  {{#if title}}
  <div class="row" id="proBanner_title">
    <div class="col-12">
      <span class="d-flex align-items-center purchase-popup message_box margin-bottom-0">
        <p class="text-danger">{{title}}</p>
        <button type="button" class="btn btn-sm btn-danger mr-2 message_btn" id="bannerClose_title">
