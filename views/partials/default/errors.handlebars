{{#if errors}}
  <div class="row" style="top: 80px; position: absolute; width: 100%; margin: auto; left: 0; right: 0;">
    {{#each errors}}
    {{#if email}}
    <div class="col-twelve tab-full">
      <div class="alert-box alert-box--error hideit padding10 margin-bottom-0">
        <p class="margin-bottom-0">{{email}}</p>
        <i class="fa fa-times alert-box__close"></i>
      </div>
    </div>
    {{/if}}
    {{#if password}}
    <div class="col-twelve tab-full">
      <div class="alert-box alert-box--error hideit padding10 margin-bottom-0">
        <p class="margin-bottom-0">{{password}}</p>
        <i class="fa fa-times alert-box__close"></i>
      </div>
    </div>
    {{/if}}
    {{#if name}}
    <div class="col-twelve tab-full">
      <div class="alert-box alert-box--error hideit padding10 margin-bottom-0">
        <p class="margin-bottom-0">{{name}}</p>
        <i class="fa fa-times alert-box__close"></i>
      </div>
    </div>
    {{/if}}
    {{/each}}
  </div>
{{/if}} 