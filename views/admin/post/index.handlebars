{{> admin/title title='Posts' }}
<div class="row">
  <div class="col-md-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th> ID </th>
                <th> Title </th>
                <th> Description </th>
                <th> Status </th>
                <th> Action </th>
              </tr>
            </thead>
            <tbody>
              {{#each posts}}
              <tr>
                <td>{{_id}}</td>
                <td> {{title}} </td>
                <td> {{description}} </td>
                <td> {{status}} </td>
                <td>
                  <a href="/admin/posts/edit/{{_id}}" class="btn btn-gradient-primary mr-2">Edit</a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
