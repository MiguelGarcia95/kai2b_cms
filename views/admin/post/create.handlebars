<div class="row">
  <div class="col-md-2 grid-margin height-10"></div>
  <div class="col-md-8 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Create A New Post</h4>
        <form class="forms-sample" method="Post" action="/admin/posts/add">
          <div class="form-group">
            <label for="exampleInputUsername1">Title</label>
            <input type="text" name='title' class="form-control" placeholder="Title">
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect1">Status</label>
            <select class="form-control form-control-lg" name='status'>
              <option>Public</option>
              <option>Private</option>
              <option>Draft</option>
            </select>
          </div>
          <div class="form-check form-check-flat form-check-primary">
            <label class="form-check-label">
            <input type="checkbox" name='comments' class="form-check-input"> Allow Comments </label>
          </div>
          <div class="form-group">
            <label for="exampleTextarea1">Content</label>
            <textarea class="form-control" rows="15"></textarea>
          </div>
          <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>